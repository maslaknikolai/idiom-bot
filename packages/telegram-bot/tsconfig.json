{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist/bot",
    "removeComments": true,
    "noEmitOnError": true,
    "moduleResolution": "NodeNext",
    "paths": {
      "~/*": ["./*"],
      "shared": ["./packages/shared"],
    },
  },
"include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
